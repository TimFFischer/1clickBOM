{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true
	},
	"rules": {
        "brace-style": [2, "stroustrup", {"allowSingleLine": true}],
		"comma-dangle": ["off"],
		"indent": [
			"error",
			4
		],
		"keyword-spacing": "error",
		"quotes": [
			"warn",
			"single"
		],
		"no-trailing-spaces": [
			"error", {
				"skipBlankLines": false
			}
		],
		"eol-last": "error",
		"no-irregular-whitespace": ["error", {
			"skipComments": false
		}],
		"max-len": ["error", {
			"tabWidth": 4
		}],
        "no-var": "error",
		"prefer-const": "error",
		"space-infix-ops": ["error", {
			"int32Hint": false
		}]
	},
	"extends": ["eslint:recommended"]
}
